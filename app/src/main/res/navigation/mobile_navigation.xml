<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_menu">

    <fragment
        android:id="@+id/nav_menu"
        android:name="com.example.orderfoodapp.fragment.MenuFragment"
        android:label="@string/menu_food"
        tools:layout="@layout/fragment_menu" />

    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.orderfoodapp.fragment.CartFragment"
        android:label="@string/menu_cart"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/nav_order"
        android:name="com.example.orderfoodapp.fragment.OrderFragment"
        android:label="@string/menu_order"
        tools:layout="@layout/fragment_order" />

    <activity
        android:id="@+id/nav_sign_out"
        android:name="com.example.orderfoodapp.MainActivity"
        android:label="@string/menu_sign_out"
        tools:layout="@layout/activity_main"
        />
</navigation>